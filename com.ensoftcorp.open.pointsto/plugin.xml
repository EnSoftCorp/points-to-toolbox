<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

	<!-- define command some handler extensions -->
	<extension
	      point="org.eclipse.ui.handlers">
	   <handler
	         commandId="com.ensoftcorp.open.pointsto.menus.editPointsToPreferencesCommand"
	         class="com.ensoftcorp.open.pointsto.handlers.PointsToPreferencesHandler">
	   </handler>
	</extension>

	<!-- extend the Atlas Toolbox menu with a new submenu for points-to analysis -->
	<extension
	      point="org.eclipse.ui.menus">
	   <menuContribution
	         locationURI="menu:com.ensoftcorp.open.commons.menus.toolbox?after=additions">
	      <menu
	            label="Points-to Analysis"
	            id="com.ensoftcorp.open.pointsto.menus.pointstoMenu">
	         <command
	               commandId="com.ensoftcorp.open.pointsto.menus.editPointsToPreferencesCommand"
	               label="Edit Preferences"
	               id="com.ensoftcorp.open.pointsto.menus.editPointsToPreferencesCommandMenuItem">
	         </command>
	      </menu>
	   </menuContribution>
	</extension>

   <!-- add a post code map hook for running points-to analysis -->
   <extension
         point="com.ensoftcorp.atlas.core.ToolboxExtensionPoint">
      <indexer
            class="com.ensoftcorp.open.pointsto.map.CodemapStage">
      </indexer>
   </extension>
   
    <!-- add points-to smart views -->
    <extension
         point="com.ensoftcorp.atlas.ui.smartViewScript">
      <script
            class="com.ensoftcorp.open.pointsto.ui.smart.PointsToAliasesSmartView">
      </script>
      <script
            class="com.ensoftcorp.open.pointsto.ui.smart.PointsToArrayComponentAliasesSmartView">
      </script>
      <script
            class="com.ensoftcorp.open.pointsto.ui.smart.PointsToArrayComponentSmartView">
      </script>
   </extension>
   
   
   <!-- create an initializer extension to initialize preferences -->
   <extension
      point="org.eclipse.equinox.preferences.preferences">
	   <initializer
	         class="com.ensoftcorp.open.pointsto.preferences.PointsToPreferences">
	   </initializer>
	</extension>
   
   <!-- create a preferences menu item for points-to analysis -->
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="com.ensoftcorp.open.pointsto.ui.PointsToPreferencesPage"
            id="com.ensoftcorp.open.pointsto.ui.preferences"
            name="Points-To Toolbox">
      </page>
   </extension>

</plugin>
